generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model users {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  role      Role   @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        Int      @id @default(autoincrement())
  title     String
  description String
  category String
  price Float
  image String
}
enum Role {
  USER
  ADMIN
}

